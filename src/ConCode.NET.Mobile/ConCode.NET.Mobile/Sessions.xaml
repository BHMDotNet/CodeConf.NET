<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ConCode.NET.Mobile.Sessions" Title="Sessions">
	<ContentPage.Content>
		<ListView x:Name="listView">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout Padding="20,0,0,0"  Orientation="Horizontal">
							 <Label Text="{Binding DateTime}"
                                TextColor="#c82b2e" />
						<StackLayout Padding="20,0,0,0"  Orientation="Vertical">
							
							<StackLayout Orientation="Vertical">
                               <Label Text="{Binding Title}"
                                TextColor="#c82b2e" />
								
                                <Label Text="{Binding Level}" FontSize="10"/>
                            </StackLayout>
							</StackLayout>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>
