@{
    ViewBag.Title = "Speaker";
}
    <div class="container-fluid speaker-page">
        <div class="row">
            <div class="col-md-8">
                <img class="img-thumbnail img-responsive" style="float:left;" src="@Model.Photo" width="150px;" />
                <h1>
                    @Model.FirstName @Model.LastName
                </h1>
                <p class="text-muted tagline"><em>@Model.Tagline</em></p>
<!--Temporary -->
<br/>
<br/>
                <h4>About @Model.FirstName</h4>

                <p>@Model.Bio</p>
                <hr/>
                <h4>Talks</h4>

                    <div>
                        <div class="speakers-session-list list-group">
                            @{ foreach (var talk in Model.Talks)
                                {
                                    <a href="#" class="list-group-item">
                                        <h4>@talk.Title</h4>
                                        <p class="text-muted">
                                            @talk.Abstract
                                        </p>
                                        <span class="label label-@talk.Level.ToString().ToLower()"> @talk.Level</span>
                                        
                                        
                                    </a>
                                }
                            }
                        </div>
                    </div>
            </div>
    <div class="col-md-4">
       <div class="panel panel-default social-media-panel">
  <div class="panel-heading">
    <h3 class="panel-title">Follow @Model.FirstName</h3>
  </div>
  <div class="panel-body">
      @if(!String.IsNullOrWhiteSpace(@Model.TwitterHandle)){
        <a href="http://twitter.com/@Model.TwitterHandle" target="_blank"> <img class="" src="~/images/social-media/social-1_logo-twitter.svg"/></a>
      }
       @if(!String.IsNullOrWhiteSpace(@Model.LinkedInProfile)){
        <a href="http://linkedin.com/in/@Model.LinkedInProfile" target="_blank"><img class="" src="~/images/social-media/social-1_logo-linkedin.svg"/></a>
      }
      @if(!String.IsNullOrWhiteSpace(@Model.FacebookProfile)){
        <a href="http://facebook.com/@Model.FacebookProfile" target="_blank"><img class="" src="~/images/social-media/social-1_logo-facebook.svg"/></a>
      }
      @if(@Model.BlogUri != null){
        <a href="@Model.BlogUri" target="_blank"><img class="" src="~/images/social-media/social-1_logo-wordpress.svg"/></a>
      }
      
  </div>
</div>
    </div>
  </div>
  </div>
